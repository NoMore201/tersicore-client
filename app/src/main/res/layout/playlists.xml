<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  >

    <ToggleButton
        android:id="@+id/likeButt"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:focusable="false"
        android:button="@drawable/toggle_button"
        android:textOff=""
        android:textOn=""
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:outlineProvider="paddedBounds"
        android:paddingBottom="@dimen/space8"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:focusable="false"
        android:paddingLeft="@dimen/space16"
        android:paddingRight="40dp"
        android:paddingTop="@dimen/space8">

        <TextView
            android:id="@+id/playtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:focusable="false"
            android:text="Playlist Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/playartists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:focusable="false"
            android:maxLines="2"
            android:text="Featuring asd and asd" />

        <TextView
            android:id="@+id/uploadedby"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Uploaded By"
            android:textSize="10sp" />

    </LinearLayout>

</RelativeLayout>